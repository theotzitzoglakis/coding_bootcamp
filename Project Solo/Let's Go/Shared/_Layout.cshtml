<!DOCTYPE html>
<html>
    <head>
        <title>@Page.Title</title>
        <meta charset="utf-8" />
        <link type="text/css" rel="stylesheet" href="~/Styles/myStyle.css" />
        <script src="~/Scripts/myScript.js"></script>
    </head>
    <body>
        <header>@RenderPage("/Shared/_header.cshtml")</header>
        <main>
            <h1>@RenderSection("h1", required:false)</h1>
            <div id="searchArea">
                @RenderSection("SearchArea", required:false)
            </div>
                @RenderBody()
        </main>
        <div>
            <img src="~/Media/plane.png" alt="planeImage" class="animation" />
        </div>
        <footer>@RenderPage("/Shared/_footer.cshtml")</footer>
    </body>
</html>
